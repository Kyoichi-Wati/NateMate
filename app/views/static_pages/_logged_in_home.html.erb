<div class="text-center">
<h1 class="font-weight-bold">Natemate</h1>
<p>新しい世界を探しに行きましょう！</p>

<%= search_form_for @key do |f| %>
  <%= f.search_field :title_cont ,placeholder:"キーワード"%>
  <%=button_tag type: 'submit', class: 'btn btn-warning mb-1' do%>
  <i class="fas fa-search"></i>
  <%end%>
<% end %>
</div>

<ul class="nav nav-tabs justify-content-center mt-5">
  <li class="nav-item">
    <a href="#newPostFeed" class="nav-link border-top-0 text-muted active" data-toggle="tab">新着</a>
  </li>
  <li class="nav-item">
    <a href="#followingUserFeed" class="nav-link border-top-0 text-muted" data-toggle="tab">タイムライン</a>
  </li>
</ul>

<div class="tab-content text-center">
    <div id="newPostFeed" class="tab-pane active">
            <%if @feed.any?%>
                <div class="conteiner">
                    <div class="card-group　mx-auto">
                        <div class="row">
                            <%=render partial: '/microposts/postcards', collection: @feed, as: "post"%>
                        </div>
                    </div>
                </div>
            <%end%>
    </div>
    <div id="followingUserFeed" class="tab-pane">
            <%if @following_users_feed.any?%>
                <div class="conteiner">
                    <div class="card-group　mx-auto">
                        <div class="row">
                            <%=render partial: '/microposts/postcards', collection: @following_users_feed, as: "post"%>
                        </div>
                    </div>
                </div>
            <%end%>
    </div>
</div>


