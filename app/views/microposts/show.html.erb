<%if @micropost.title%>
    <%provide(:title,@micropost.title)%>
<%else%>
    <%provide(:title,"ç„¡é¡Œ")%>
<%end%>

<div class="conteiner">
    <div class="row">
        <div class="col-12 text-center">
            <%=image_tag(@micropost.picture.url,class:"postPicture")%>
        </div>
        <span class="postLikesBtn" id="micropost-<%= @micropost.id %>">
            <%=render partial: '/likes/likes_btn',locals: { post: @micropost }%>
        </span>
            <%=render 'post_tabs'%>
        <div class="col-12 text-center mt-5">
            <span class="text-muted">by </span>
        <%if @micropost.user.avatar?%>
            <%=link_to image_tag(@micropost.user.avatar.url,size:"40x40",class:"avatarTypeCircle"),@micropost.user%>
        <%else%>
            <%=link_to image_tag(asset_path('default.jpg'),size:"40x40",class:"avatarTypeCircle"),@micropost.user%>
        <%end%>
        <%=link_to @micropost.user.name,@micropost.user,class:"text-muted"%>
        <%=render "delete_icon"%>
        </div>
    </div>
</div>