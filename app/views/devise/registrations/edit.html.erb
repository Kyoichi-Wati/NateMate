<div class="text-center">
    <h2>アカウント情報編集 </h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
      　<%= f.label :avatar%><br />
      　<%= f.file_field :avatar,autofocus: true %><br />
        <%= f.label :remove_avatar_check_box%>
        <%= f.check_box :remove_avatar%>
      </div>


      <div class="field">
        <%= f.label :user_name%><br />
        <%= f.text_field :name, autofocus: true%>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %> <i>(変更しない場合は何も入力しない)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %><i>文字以上)</i></em>
        <% end %>
      </div>

    <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :current_password %> <br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "更新" %>
      </div>
    <% end %>

    <h3>JunkLifeを退会</h3>
    <p>
    退会する場合、このアカウントの情報、投稿したデータは削除されます。
    <%= button_to "退会", registration_path(resource_name), data: { confirm: "アカウントを完全に削除します" }, method: :delete %>
    </p>

    <%= link_to "戻る", :back %>
</div>

