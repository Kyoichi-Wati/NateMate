<%provide(:title,@user.name)%>
<div class="text-center">
<% @user ||= current_user %>
<%if user_avatar_valid?(@user)%>
  <%= image_tag @user.avatar.url,size:"200x200",class:"avatarTypeCircle" %>
<%else%>
  <%= image_tag asset_path('default.jpg'),size:"200x200" %>
<%end%>
<span class="personalName"><%=@user.name%></span>
<%if current_user?(@user) && @user.name != "guest"%>
  <%=link_to edit_user_registration_path do %>
    <i class="fas fa-user-cog text-muted"></i>
  <%end%>
<%end%>

<%= render 'follow_btn' %>
<%=render'feed_tabs'%>

